<article>
    <h2><a href="{{ url }}">{{ title }} </a></h2>

    <div class="row">
        <div class="group1 col-sm-8 col-md-8">
            <span class="glyphicon glyphicon-tag"></span>
            {{#each tags}}
                <a class="tag" href="#">{{ this }}</a>
            {{/each}}
        </div>
        <div class="group2 col-sm-8 col-md-8">
            <span class="glyphicon glyphicon-time"></span> {{ date }}
        </div>
    </div>

    <hr>
    {{{ content }}}
    <hr>
</article>

